<div>
    <h2>Courses:</h2>
    <ul>
        @foreach (var course in Model.StudentCourses)
        {
            <li>
                @course.CourseName
                <ul>
                    @if (course.teacherCourses != null)
                    {
                        @foreach (var teacher in course.teacherCourses)
                        {
                            <li>@teacher.Teacher?.Name_Teacher</li>
                        }
                    }
                </ul>
            </li>
        }
    </ul>
</div>


